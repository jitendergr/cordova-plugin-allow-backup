<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
  xmlns:android="http://schemas.android.com/apk/res/android" id="cordova-plugin-allow-backup" version="1.0.1">
  <name>cordova-plugin-allow-backup</name>
  <description>
		To enable you to set the allowBackup property of a cordova-android application.
  </description>
  <author>Miguel 'Kelter' Antunes</author>
  <repo>https://github.com/kelter-antunes/cordova-plugin-allow-backup</repo>
  <license>MIT</license>
  <engines>
    <engine name="cordova" version=">=7.0.0"/>
    <engine name="cordova-android" version=">=7.0.0"/>
  </engines>
  <platform name="android">
	   <config-file target="AndroidManifest.xml" parent="/manifest/application">
            <application android:allowBackup="false"/>
        </config-file>    
  </platform>
</plugin>
